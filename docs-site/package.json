{
  "name": "stati-docs-site",
  "version": "1.0.0",
  "description": "Official Stati documentation site",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "stati dev --tailwind-input src/styles.css --tailwind-output dist/styles.css",
    "dev:local": "node ../packages/cli/dist/cli.js dev --tailwind-input src/styles.css --tailwind-output dist/styles.css",
    "build": "stati build && npm run build:css",
    "build:local": "node ../packages/cli/dist/cli.js build --clean && npm run build:css",
    "preview": "stati preview",
    "preview:local": "node ../packages/cli/dist/cli.js preview",
    "clean:dist": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true})\"",
    "clean:cache": "node -e \"require('node:fs').rmSync('.stati',{recursive:true,force:true})\"",
    "clean": "npm run clean:dist && npm run clean:cache",
    "build:css": "tailwindcss -i src/styles.css -o dist/styles.css --minify",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "static-site",
    "stati",
    "minimal"
  ],
  "stati": {
    "engine": "stati",
    "version": "^1.15.0"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@stati/cli": "^1.9.0",
    "@stati/core": "^1.15.0",
    "autoprefixer": "^10.4.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-external-links": "^0.0.6",
    "markdown-it-prism": "^3.0.0",
    "markdown-it-toc-done-right": "^4.2.0",
    "postcss": "^8.4.0",
    "prismjs": "^1.30.0",
    "tailwindcss": "^3.4.0",
    "@tailwindcss/typography": "^0.5.16",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
