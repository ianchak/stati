<header class="bg-white/80 dark:bg-dark-900/80 backdrop-blur-lg border-b border-gray-200/50 dark:border-dark-700/50 sticky top-0 z-40 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="flex items-center justify-between h-18">
            <!-- Logo and brand -->
            <div class="flex items-center space-x-4">
                <a href="/" class="flex items-center space-x-2 group">
                    <div class="relative">
                        <img src="/logo.png" alt="Stati Logo" class="w-12 h-12 shadow-lg shadow-primary-500/20 rounded-xl">
                        <div class="absolute inset-0 bg-primary-600/20 dark:bg-primary-400/20 rounded-xl blur-lg opacity-50"></div>
                    </div>
                    <div>
                        <span class="text-2xl font-bold bg-gradient-to-r from-primary-700 to-primary-500 dark:from-primary-400 dark:to-primary-300 bg-clip-text text-transparent">Stati</span>
                        <span class="block text-sm text-gray-500 dark:text-gray-400 font-medium -mt-1">Documentation</span>
                    </div>
                </a>
            </div>

            <!-- Mobile menu button -->
            <button data-mobile-menu class="lg:hidden p-2.5 rounded-lg text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white hover:bg-gray-100/80 dark:hover:bg-dark-700/80 transition-all duration-200 backdrop-blur-sm">
