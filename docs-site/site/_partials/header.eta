            <!-- Navigation -->
            <nav class="hidden lg:flex items-center space-x-1">
                <a href="/getting-started/" class="nav-link px-4 py-2 rounded-lg text-gray-600 hover:text-primary-600 dark:text-gray-300 dark:hover:text-primary-400 hover:bg-gray-100/60 dark:hover:bg-dark-700/60 transition-all duration-200 font-medium">
                    Getting Started
