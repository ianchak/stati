<!DOCTYPE html>
<html lang="<%= stati.site.defaultLocale || 'en-US' %>" class="scroll-smooth" data-theme="light">
<head>
    <%~ stati.partials.themeInit %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="view-transition" content="same-origin">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">

    <link rel="preload" href="/fonts/inter.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/fira-code.woff2" as="font" type="font/woff2" crossorigin>

    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/prism-stati.css">
    <link rel="alternate" type="application/rss+xml" title="Stati Documentation Updates" href="/feed.xml">
    <% if (stati.assets?.bundlePaths && stati.assets.bundlePaths.length > 0) { %>
    <% for (const bundlePath of stati.assets.bundlePaths) { %>
    <link rel="modulepreload" href="<%= bundlePath %>">
    <% } %>
    <% } %>
</head>
<body class="bg-gradient-to-br from-slate-50 via-white to-blue-50/30 dark:from-dark-950 dark:via-dark-900 dark:to-dark-900/80 text-gray-900 dark:text-gray-100 font-sans antialiased">
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="skip-link sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-md z-50 transition-all duration-200">
        Skip to main content
    </a>

    <%~ stati.partials.header %>

    <div class="flex">
        <%~ stati.partials.sidebar %>

        <!-- Floating sidebar toggle button for mobile -->
        <button id="sidebar-toggle-btn" data-mobile-menu class="fixed bottom-8 left-8 lg:hidden bg-primary-600 hover:bg-primary-700 text-white p-3 rounded-full shadow-lg hover:shadow-glow transition-all duration-300 z-40">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
        </button>

        <main id="main-content" class="flex-1 min-w-0 transition-all duration-300 ease-in-out">
            <div class="flex min-w-0">
                <!-- Main content area -->
                <div class="flex-1 min-w-0 px-6 lg:px-12 py-12 lg:py-16 overflow-x-auto">
                    <div class="prose prose-lg dark:prose-invert max-w-[80ch] mx-auto prose-headings:scroll-mt-24 prose-pre:bg-dark-800 prose-pre:shadow-soft-lg prose-code:bg-gray-100 dark:prose-code:bg-dark-800 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:font-medium">
                        <%~ stati.content %>
                    </div>
                </div>

                <!-- Table of Contents area -->
                <aside class="hidden xl:block w-80 min-w-80 flex-shrink-0 pr-6">
                    <%~ stati.partials.toc %>
                </aside>
            </div>
        </main>
    </div>

    <%~ stati.partials.footer %>

    <!-- Scroll to top button -->
    <button id="scroll-to-top" class="fixed bottom-8 right-8 bg-primary-600 hover:bg-primary-700 text-white p-3 rounded-full shadow-lg hover:shadow-glow opacity-0 pointer-events-none transition-all duration-300 z-40">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
        </svg>
    </button>
</body>
</html>
